<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar_text_main" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#6D5C4D</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="toolbar_text_secondary" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">#B2967D</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="toolbar_text_tertiary" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/caudex_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="rounded_slider_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="rounded_20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="rounded_30">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="tab_layout_text" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="not_available_text" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="optionsMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/gray34</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/caudex_bold</item>
    </style>

</resources>