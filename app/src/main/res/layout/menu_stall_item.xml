<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="220dp"
    android:id="@+id/menu_stall_item_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ECF8F8">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/menu_food_card_view_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/rounded_20_top"
            android:src="@drawable/restoran_famidah" />

        <TextView
            android:id="@+id/stall_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Restoran Famidah"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_icon" />

            <TextView
                android:id="@+id/operation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="10am to 10pm"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/shadow_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>

    <TextView
        android:id="@+id/temporarily_closed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporarily Closed"
        android:textAppearance="@style/not_available_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:rotation="-15"/>
</androidx.cardview.widget.CardView>