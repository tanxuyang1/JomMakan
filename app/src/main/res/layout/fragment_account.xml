<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".AccountFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:src="@drawable/account_profile_picture">

    </ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/caudex_bold"
        android:text="Xiao Ming"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp">

    </TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/caudex"
        android:text="xiaoming123@gmail.com"
        android:textAlignment="center"
        android:textColor="#575757"
        android:textSize="14sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_width="341dp"
            android:layout_height="81dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/account_action_button"
            android:drawableStart="@drawable/edit_profile_icon"
            android:drawableEnd="@drawable/account_arrow_right"
            android:fontFamily="@font/caudex_bold"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="#575757"
            android:textSize="16sp" />

        <Button
            android:id="@+id/my_wallet_btn"
            android:layout_width="341dp"
            android:layout_height="81dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/account_action_button"
            android:drawableStart="@drawable/my_wallet_icon"
            android:drawableEnd="@drawable/account_arrow_right"
            android:fontFamily="@font/caudex_bold"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="My Wallet"
            android:textAllCaps="false"
            android:textColor="#575757"
            android:textSize="16sp" />

        <Button
            android:id="@+id/order_history_btn"
            android:layout_width="341dp"
            android:layout_height="81dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/account_action_button"
            android:drawableStart="@drawable/order_history_icon"
            android:drawableEnd="@drawable/account_arrow_right"
            android:fontFamily="@font/caudex_bold"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Order History"
            android:textAllCaps="false"
            android:textColor="#575757"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/log_out_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/caudex_bold"
            android:text="log out"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#9B836E"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>