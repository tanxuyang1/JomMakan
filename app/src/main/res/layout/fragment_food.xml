<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/food_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/nasi_goreng_image"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <View
                android:id="@+id/shadow_background"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#80000000"/>

            <TextView
                android:id="@+id/not_available_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Available"
                android:textAppearance="@style/not_available_text"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="40sp"
                android:rotation="-18"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/back_button_icon"
                android:background="@drawable/back_button_shape"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:background="@drawable/stall_details_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:text="Nasi Goreng"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="25sp"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:lineHeight="30dp"/>

                <TextView
                    android:id="@+id/food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="RM 6.00"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:background="@drawable/open_close_shape"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/food_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/food_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="- Local delight\n- Spicy 🌶️\n- Contains prawn 🍤"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:lineHeight="25dp"
                    android:maxLines="4"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity :"
        android:fontFamily="@font/caudex_bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/decrement_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/decrement_icon"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/increment_decrement_shape"/>
        
        <TextView
            android:id="@+id/quantity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:fontFamily="@font/caudex_bold"
            android:textStyle="italic"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/increment_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/increment_icon"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/increment_decrement_shape"/>
    </LinearLayout>

    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_registration_button_shape"
        android:text="Add To Cart"
        android:textColor="#FFFFFF"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="@font/caudex_bold"
        android:textSize="15sp"/>
</LinearLayout>