<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="260dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/pick_up_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Pickup Time:"
            android:fontFamily="@font/caudex_bold"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/pick_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="11.30 AM"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#000000"
            android:layout_marginStart="1dp"/>

        <TextView
            android:id="@+id/wallet_balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Balance:"
            android:fontFamily="@font/caudex_bold"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/wallet_balance"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:text="RM 13.00"
            android:textAlignment="center"
            android:background="@drawable/wallet_balance_shape"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="CANCEL"
                android:fontFamily="@font/caudex_bold"
                android:textSize="11sp"
                android:textColor="#000000"
                android:background="@drawable/cart_cancel_button_shape"
                android:elevation="1dp"/>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="CONFIRM &amp; PAY "
                android:fontFamily="@font/caudex_bold"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/cart_confirm_button_shape"
                android:layout_marginStart="30dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>