<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_location_item_card_view"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="#ECF8F8">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_location_card_view_image"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/rounded_20"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_location_card_view_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="4"
                android:text="Faculty of Computer Science and Information Technology"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>