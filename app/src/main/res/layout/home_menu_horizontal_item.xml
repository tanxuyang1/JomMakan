<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_menu_item_card_view"
    android:layout_marginEnd="30dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="#EEE4E1">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/home_menu_card_view_image"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/rounded_home_menu_and_location_card_view_image"/>

        <TextView
            android:id="@+id/home_menu_card_view_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Nasi Goreng"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/home_menu_card_view_food_stall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Restoran Famidah"
            android:textColor="#4A4A4A"
            android:textSize="12sp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/home_menu_card_view_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:text="RM 6.00"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>